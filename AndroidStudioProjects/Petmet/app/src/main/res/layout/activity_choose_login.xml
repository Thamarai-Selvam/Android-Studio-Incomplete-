<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity.ChooseLoginActivity"
    android:background="@color/material_yellow700">

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/loginemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="131dp"
        android:layout_centerVertical="true"
        app:floating_background_color="@color/material_green700"
        app:floating_title_color="@color/material_yellow600"
        app:floating_title="@string/Login_Email"
        tools:ignore="MissingConstraints" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/loginphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/loginemail"
        app:floating_title_color="@color/material_yellow600"
        app:floating_background_color="@color/material_green700"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="128dp"
        app:floating_title="@string/Login_phone"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="257dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:contentDescription="logo"
        app:srcCompat="@drawable/logov1"/>

</RelativeLayout>